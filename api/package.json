{
  "name": "pipeline-api",
  "version": "0.11.0",
  "description": "express - typescript - cucumber - serverless",
  "main": "server.js",
  "scripts": {
    "start": "npx tsc && npx sequelize db:migrate && npx sequelize db:seed:all && npx serverless offline start --stage dev",
    "db:all": "npx tsc && npx sequelize db:create && npm run db:migrate && npm run db:seed",
    "db:migrate": "npx tsc && npx sequelize db:migrate",
    "db:seed": "npx tsc && npx sequelize db:seed:all",
    "test": "tslint src/**/*.ts && npx tsc && npx sequelize db:migrate && npx sequelize db:seed:all && nyc cucumber-js ./tests/features --require ./tests --format ./node_modules/cucumber-pretty --exit"
  },
  "repository": "git@github.com:DashboardHub/PipelineDashboard.git",
  "license": "MIT",
  "author": "DashboardHub",
  "dependencies": {
    "aws-serverless-express": "^3.2.0",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "helmet": "^3.13.0",
    "mysql2": "^1.5.3",
    "reflect-metadata": "^0.1.12",
    "sequelize": "^4.38.0",
    "sequelize-cli": "^4.0.0",
    "sequelize-typescript": "^0.6.6-beta.1",
    "uuid": "^3.3.2",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@types/aws-serverless-express": "^3.0.1",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/helmet": "^0.0.38",
    "@types/node": "^10.5.3",
    "@types/uuid": "^3.4.3",
    "@types/winston": "^2.3.9",
    "chai": "^4.1.2",
    "cucumber": "^4.2.1",
    "cucumber-pretty": "^1.4.4",
    "nyc": "^12.0.2",
    "serverless-domain-manager": "^2.6.0",
    "serverless-offline": "^3.25.6",
    "serverless-plugin-typescript": "^1.1.5",
    "supertest": "^3.1.0",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2"
  }
}
