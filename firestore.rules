service cloud.firestore {

  match /databases/{database}/documents {
    match /users/{user} {
      allow create: if request.auth.uid != null;
      allow get, list, update, delete: if request.auth.uid != null && request.auth.uid == resource.data.uid;

      match /logins/{login} {
        allow read: if request.auth.uid != null && get(/databases/$(database)/documents/users/$(user)).data.uid == request.auth.uid;
      }
    }
    match /projects/{project} {
      allow get, list: if resource.data.isPrivate == false || request.auth.uid == resource.data.owner;
      allow create: if request.auth.uid != null;
      allow update, delete: if request.auth.uid != null && request.auth.uid == resource.data.owner;
    }
  }

}
